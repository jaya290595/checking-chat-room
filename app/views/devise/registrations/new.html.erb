<div class="border-form-div">
  <h2>Sign up</h2>

    <% token = params[:token]%>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <%= f.text_field :name, :autofocus => true, :placeholder => 'Name'%>
        <%if !get_token(token).present?%>
          <%= f.text_field :account_name, :autofocus => true, :placeholder => 'Account name' %>
        <%else%>
          <%= f.hidden_field :token, value: params[:token]%>
        <%end%>
      <%= f.email_field :email, value: get_token(token),:autofocus => true, :placeholder => 'Email address'%>
      <%= f.password_field :password, :placeholder => 'Password' %>
      <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation' %>
      <%= f.submit "Sign up",:class=>'btn btn-primary' %>
    <% end %>
    <%= render "devise/shared/links" %>
</div>

